{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "DB_TYPE=sqlite DB_FILE=test.sqlite NODE_ENV=test jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "DB_TYPE=sqlite DB_FILE=:memory: NODE_ENV=test jest --config ./test/jest-e2e.json --runInBand",
    "seed": "ts-node src/scripts/seed.ts",
    "seed:more": "ts-node src/scripts/seed-more.ts",
    "db:reset": "npm run seed && npm run seed:more",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "migration:run": "npm run typeorm migration:run -- -d src/config/typeorm.config.ts",
    "migration:generate": "npm run typeorm migration:generate -- -d src/config/typeorm.config.ts",
    "migration:create": "npm run typeorm migration:create -- -n",
    "migration:revert": "npm run typeorm migration:revert -- -d src/config/typeorm.config.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.0.2",
    "@nestjs/mapped-types": "^2.0.0",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.0.2",
    "@nestjs/swagger": "^7.1.15",
    "@nestjs/typeorm": "^10.0.1",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.0",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.17",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.2",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.4",
    "@types/node": "^16.11.0",
    "@types/passport-jwt": "^3.0.8",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.2",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.20",
    "sqlite3": "^5.1.7",
    "supertest": "^6.1.3",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.entity.ts",
      "!**/*.dto.ts",
      "!**/*.module.ts",
      "!**/main.ts",
      "!**/test-utils/**",
      "!**/scripts/**",
      "!**/migrations/**",
      "!**/config/**",
      "!**/cursada/**",
      "!**/examen-final/**"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "testTimeout": 10000,
    "maxWorkers": 1,
    "setupFilesAfterEnv": [
      "<rootDir>/../test/test-setup.ts"
    ]
  }
}
